@model List<BasketVM>
    @foreach (BasketVM basketVM in Model)
    {
        <tr>
            <td class="custome-checkbox"><input type="checkbox"></td>
            <td class="image"><img src="img/@basketVM.Image">@basketVM.Id</td>
            <td class="product-name">
                <h6>
                    <a href="">@basketVM.Name</a>
                </h6>
                <div class="icons">
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star"></i>
                    <i class="fa-solid fa-star-half-stroke"></i>
                    <span>(4.0)</span>
                </div>
            </td>
            <td class="price">
                <h4>$@basketVM.Price.ToString("F2")</h4>
            </td>
            <td class="item-count">
                <div class="inp-num number">
                    <button data-rid="@basketVM.Id" class="up" onclick="salam(e);"><i class="fa-solid fa-angle-up "></i></button>
                    <span class="inp-value count">@basketVM.Count</span>
                    <a href="#" data-id="@basketVM.Id" class="down"><i class="fa-solid fa-angle-down"></i></a>
                </div>
            </td>
            <td class="price subtotal-price">
                <h4>$<span class="subtotal-value">@(basketVM.Count * basketVM.Price)</span></h4>
            </td>
            <td class="remove">
                <a href="#">
                    <i class="fa-solid fa-trash-can"></i>
                </a>
            </td>
        </tr>
    }